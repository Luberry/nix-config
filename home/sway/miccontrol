RED='\033[0;31m'
NC='\033[0m' # No Color
case $(pacmd list-sources | grep -A 11 0 | awk '/muted/ {print $2; exit}') in
    yes)
      echo "MIC MUTED"
      ;;
    no)
      echo ""
      ;;
esac
